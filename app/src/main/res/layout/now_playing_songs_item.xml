<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp">

    <ImageView
        android:src="@drawable/music_ssafy_office"
        android:id="@+id/tvNowPlayingSongAlbumImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNowPlayingSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@id/tvNowPlayingSongAlbumImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNowPlayingSongArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="artist"
        app:layout_constraintStart_toEndOf="@id/tvNowPlayingSongAlbumImage"
        app:layout_constraintTop_toBottomOf="@id/tvNowPlayingSongTitle" />

    <TextView
        android:id="@+id/tvNowPlayingSongGenre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="genre"
        app:layout_constraintStart_toEndOf="@id/tvNowPlayingSongAlbumImage"
        app:layout_constraintTop_toBottomOf="@id/tvNowPlayingSongArtist"/>

</androidx.constraintlayout.widget.ConstraintLayout>